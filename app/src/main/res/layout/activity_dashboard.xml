<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="182dp"
        android:layout_height="26dp"
        android:layout_marginTop="44dp"
        android:text="@string/welcometextview"
        android:textAlignment="center"
        android:textColor="#4527A0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="@string/username_textview_hint"
        android:textAlignment="center"
        android:textColor="#6A1B9A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/balancetextView"
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:layout_marginTop="128dp"
        android:text="@string/balance_text"
        android:textColor="#4527A0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_textView" />

    <TextView
        android:id="@+id/amounttextView"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="140dp"
        android:hint="@string/amount_text"
        app:layout_constraintStart_toEndOf="@+id/balancetextView"
        app:layout_constraintTop_toBottomOf="@+id/username_textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="172dp"
        android:layout_height="47dp"
        android:layout_marginTop="488dp"
        android:background="#4527A0"
        android:text="@string/billbutton"
        android:textColor="#DFDEE4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>